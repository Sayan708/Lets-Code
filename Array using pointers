//Code to access the element of an Array using pointers.
#include<iostream>
using namespace std; 

int main()
{
	int arr[5];
	int *ptr= &arr[0];
	cout<<" Enter Elements : "<<"\n";
	
	for ( int i=0;i<5;i++)
   	{
 	cin>>arr[i];
    } 

	cout<<" You entered : "<<" \n ";
	for( int i=0; i<5;i++)
	{
		cout<<*ptr<<" \n ";
		ptr++;
	}
	return 0;
}
